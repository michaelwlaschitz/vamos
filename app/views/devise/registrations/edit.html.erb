<div class="content-container w-75 mt-5">

<!--   <h2 class="mb-4">Edit profile</h2>
 -->
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">

      <% if current_user.ngo %>
        <h2 class="orange-title"><%= t(".edit_ngo") %></h2>
        <%= f.simple_fields_for current_user.ngo do |t|%>
          <%= t.input :name,
                    required: true,
                    autofocus: true,
                    input_html: { class: "mb-4",autocomplete: "name" }%>
          <%= t.input :description,
                    required: true,
                    autofocus: true,
                    input_html: { class: "mb-4",autocomplete: "description" }%>
        <% end %>
      <% end %>

      <h2 class="orange-title"><%= t(".edit_user") %></h2>

      <%= f.input :first_name,
                  required: true,
                  autofocus: true,
                  input_html: { class: "mb-4",autocomplete: "first-name" }%>
      <%= f.input :last_name,
                  required: true,
                  autofocus: true,
                  input_html: { class: "mb-4",autocomplete: "last-name" }%>

    <h3 class="edit_picture_in_profile_page"><%= t(".edit_picture")%> </h3>
    <div class="d-flex align-items-center">
    <label class="button-upload-file mr-2">
    <%= t(".select_picture") %>
    <span style="display:none;">
      <%= f.input :photo, as: :file, input_html: {class: "logo-input", label: "Photo"} %>
    </span>
    </label>
    <div class="logo-file-name">
    </div>
  </div>            

      <%= f.input :phone,
                  required: true,
                  autofocus: true,
                  input_html: { class: "mb-4",autocomplete: "phone" }%>

      <%= f.input :description,
                  required: true,
                  autofocus: true,
                  input_html: { class: "mb-4",autocomplete: "description" }%>



      <%= f.input :email, required: true, autofocus: true %>
      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
      <% end %>

      <%= f.input :password,
                  label: t(".set_new"),
                  hint: t(".hint1"),
                  required: false,
                  input_html: { autocomplete: "new-password" } %>
      <%= f.input :password_confirmation,
                  required: false,
                  label: t(".confirm"),
                  input_html: { autocomplete: "new-password" } %>
      <%= f.input :current_password,
                  hint: t(".hint2"),
                  required: true,
                  label: t(".save"),
                  input_html: { autocomplete: "current-password" } %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, t(".update"), class: "button-vamos primary-style" %>
    </div>
  <% end %>

  <p class="mt-5"><%= link_to t(".cancel"), registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :deletes, class: "dark-gray" %></p>

  <%= link_to "Back", :back %>
</div>
