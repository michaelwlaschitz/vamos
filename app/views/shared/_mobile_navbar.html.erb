<div class="mobile-navbar d-flex justify-content-around align-items-center">

  <% if user_signed_in? && current_user.ngo %>

    <div class="nav-element <%= "active" if current_page?(user_profile_path) %>">
      <%= link_to user_profile_path do %>
        <div>
          <i class="far fa-user nav-icon"></i>
          <p class="nav-icon-tag"><%= t("global.navbar.profile") %></p>
        </div>
      <% end %>
    </div>

    <div class="nav-element <%= "active" if current_page?(applications_path) %>">
      <%= link_to applications_path do %>
        <div>
          <i class="far fa-check-square nav-icon"></i>
          <p class="nav-icon-tag"><%= t("global.navbar.applications") %></p>
        </div>
      <% end %>
    </div>

    <div class="nav-element <%= "active" if current_page?(user_projects_path) %>">
      <%= link_to user_projects_path do %>
        <div>
          <i class="fas fa-list nav-icon"></i>
          <p class="nav-icon-tag"><%= t("global.navbar.my_projects") %></p>
        </div>
      <% end %>
    </div>

    <div class="nav-element <%= "active" if current_page?(conversations_path) %>">
      <%= link_to conversations_path do %>
        <div>
          <i class="far fa-comment-alt nav-icon"></i>
          <p class="nav-icon-tag"><%= t("global.navbar.messages") %></p>
        </div>
      <% end %>
    </div>

  <% elsif user_signed_in?%>

    <div class="nav-element <%= "active" if current_page?(controller: "projects", action: "index") %>">
      <%= link_to projects_path do %>
        <div>
          <i class="fas fa-list nav-icon"></i>
          <p class="nav-icon-tag"><%= t("global.navbar.explore") %></p>
        </div>
      <% end %>
    </div>
    <div class="nav-element <%= "active" if current_page?(user_profile_path) %>">
      <%= link_to user_profile_path do %>
        <div>
          <i class="far fa-user nav-icon"></i>
          <p class="nav-icon-tag"><%= t("global.navbar.profile") %></p>
        </div>
      <% end %>
    </div>
    <div class="nav-element <%= "active" if current_page?(conversations_path) %>">
      <%= link_to conversations_path do %>
        <div>
          <i class="far fa-comment-alt nav-icon"></i>
          <p class="nav-icon-tag"><%= t("global.navbar.conversations") %></p>
        </div>
      <% end %>
    </div>

  <% else %>

    <div class="nav-logo">
      <%= link_to root_path, class: "navbar-brand" do %>
        <%= image_tag "final_logo.png", style: "width: 130px" %>
      <% end %>
    </div>
    <div class="nav-element">
      <%= link_to t("global.navbar.login"), data: {toggle: "modal", target: ".bd-example-modal-lg"}, class: "nav-link mb-2" do %>
        <div>
          <i class="far fa-user nav-icon"></i>
          <p class="nav-icon-tag">SIGN IN</p>
        </div>
      <% end %>
    </div>

  <% end %>
</div>

<%= render 'shared/login_form' %>
