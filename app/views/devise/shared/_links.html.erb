<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to t("global.devise_links.signup"), new_registration_path(resource_name), class: "dark-gray" %><br />
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to t("global.devise_links.forgot_password"), new_password_path(resource_name), class: "dark-gray" %><br />
<% end %>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), class: "dark-gray" %><br />
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name), class: "dark-gray" %><br />
<% end %>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= link_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), class: "dark-gray fb-login-button" %><br />
  <% end %>
<% end %>

<!-- Facebook SDK -->
<% if Rails.env.production? %>
  <script>
    window.fbAsyncInit = function() {
      FB.init({
        appId            : '548312872532590', // development_id = 275824156803028 , production_id = 548312872532590
        autoLogAppEvents : true,
        xfbml            : true,
        version          : 'v7.0'
      });
    };
  </script>

  <script async defer src="https://connect.facebook.net/en_US/sdk.js"></script>
<% end %>



