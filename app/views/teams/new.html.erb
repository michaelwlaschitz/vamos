<div class="progress-bar-container progress-bar-container-step-1">
  <div class="progress-bar-area">
    <div class="progress" id="steps-progress">
      <div class="progress-bar" role="progressbar" style="width: 0%" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100"></div>
    </div>
    <div class="progress-step first-step text-center">
      <p><%= t(".step_1") %></p>
      <i class="fas fa-circle progress-icon" style="position:absolute;color:white;"></i>
      <i class="far fa-circle progress-icon" style="color:#fb8500;font-size: 51px;position:relative;bottom:0px;left:0px;"></i>
    </div>
    <div class="progress-step second-step text-center">
      <p><%= t(".step_2") %></p>
      <i class="fas fa-circle progress-icon"></i>
    </div>
    <div class="progress-step third-step text-center">
      <p><%= t(".step_3") %></p>
      <i class="fas fa-circle progress-icon"></i>
    </div>
  </div>
</div>

<div class="content-container-create-team">
  <div class="d-flex">
    <div class="form-style-desktop">
      <div class="title">
        <h2><%= t(".title_for_html") %> </h2>
      </div>

      <div class="simple-form">
        <h3><%= t(".team_name") %> </h3>
        <%= simple_form_for @new_team  do |team_fields| %>
          <% if @new_team.errors.any? %>
          <div class="errors-container">
            <ul>
              <% @new_team.errors.full_messages.each do |message| %>
              <li><%= message %></li>
              <% end %>
            </ul>
          </div>
          <% end %>
          <%= team_fields.hidden_field "id", :value => params[:id] %>
          <%= team_fields.input :name, label: false, placeholder: "The Treegantics"%>

          <h3 class="mt-4"><%= t(".invite_friends") %></h3>
          <%= team_fields.simple_fields_for :team_memberships do |tm| %>
          <%= render 'team_membership_fields' , f: tm %>
          <% end %>

          <div class="links">
            <%= link_to_add_association team_fields, :team_memberships do %>
            <h2 class="ml-2"> <i class="fas fa-plus-circle orange"></i> </h2>
            <% end %>
          </div>

          <%= team_fields.submit t(".create_team"), class: "button-vamos primary-style w-100"%>

        <% end %>
      </div>
    </div>

    <div class="picture-style-desktop">
      <div class="text-center-desktop">
        <%= image_tag "team-work.jpg", id: "team-image-desktop" %>
      </div>
    </div>
  </div>

</div>
