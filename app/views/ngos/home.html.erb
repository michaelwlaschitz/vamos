  <div>
    <h2 class="bold home-h2-container mt-3"><%= t(".pricing_title") %></h2>
    <p class="ngo-cta"><%= t(".pricing_sub_title") %></p>
    <%= link_to t(".pricing_button"), new_ngo_path, class: "button-vamos primary-style mt-2 mb-3" %>
