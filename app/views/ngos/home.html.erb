          <h2 class="orange mt-3"><%= t(".usp1_text") %></h2>
          <p class="paragraph-no-margin"></p>
        </div>
      </div>
      <div class="d-flex align-items-center mt-4">
        <h1><i class="fas fa-magic orange mr-4"></i></h1>
        <div>
          <h2 class="orange"><%= t(".usp2_title") %></h2>
