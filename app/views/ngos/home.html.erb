  <p class="text-center mt-2"><%= t(".function_sub_title") %></p>

  <div class="product-description d-flex py-4 px-4 hide-desktop justify-content-around align-items-center">

  <%= image_tag "Screens/ngo_screen.png", class: "ngo-screen hide-mobile ml-5"%>

    <div class="usp-info mr-3">
      <div class="d-flex align-items-center">
        <h1><i class="fas fa-check-square orange mr-4"></i></h1>
        <div>
          <h2 class="orange"><%= t(".function1_title") %></h2>
          <p class="paragraph-no-margin"><%= t(".function1_text") %></p>
        </div>
      </div>
      <div class="d-flex align-items-center mt-5">
        <h1><i class="fas fa-chart-bar orange mr-4"></i></h1>
        <div>
          <h2 class="orange"><%= t(".function2_title") %></h2>
          <p><%= t(".function2_text") %></p>
        </div>
      </div>

      <div class="d-flex align-items-center mt-5">
        <h1><i class="fas fa-comments orange mr-4"></i></h1>
        <div>
          <h2 class="orange"><%= t(".function3_title") %></h2>
          <p><%= t(".function3_text") %></p>
        </div>
      </div>

    </div>
  </div>
</div>

