          <h2 class="orange"><%= t(".usp3_title") %></h2>
          <p><%= t(".usp3_text") %></p>
        </div>
      </div>
    </div>

    <div class="d-flex mb-4 mt-5 usp-box align-items-center">
      <h1><i class="fas fa-long-arrow-alt-down white mr-3"></i></h1>
      <h3 class="white font-weight-normal"><%= t(".key_benefit1") %></h3>
    </div>

    <div class="d-flex mb-4 mt-3 usp-box align-items-center">
      <h1><i class="fas fa-long-arrow-alt-up white mr-3"></i></h1>
      <h3 class="white font-weight-normal"><%= t(".key_benefit2") %></h3>
    </div>

  </div>

<!-- Product Description -->
<div class="light-gray-background py-3 px-3">
